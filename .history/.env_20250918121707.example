# Configurações da API Anthropic (OBRIGATÓRIO)
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Configurações do Google Search API (OPCIONAL - para pesquisas mais precisas)
GOOGLE_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GOOGLE_CSE_ID=XXXXXXXXXXXXXXXXX

# Configurações da News API (OPCIONAL - para notícias mais atualizadas)
NEWS_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Configurações da aplicação
APP_NAME=CrewAI Stock Analysis
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
LOG_LEVEL=INFO

# Configurações de timeout e performance
REQUEST_TIMEOUT=30
MAX_RETRIES=3
CACHE_ENABLED=true
CACHE_TTL=3600

# Configurações do modelo de linguagem
DEFAULT_LLM_MODEL=claude-3-sonnet-20240229
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Configurações de análise
DEFAULT_ANALYSIS_TYPE=quick
MAX_SYMBOLS_BATCH=10
REPORT_FORMAT=markdown

# Configurações de diretórios
REPORTS_DIR=reports
LOGS_DIR=logs
CACHE_DIR=cache

# Configurações de segurança
ENABLE_API_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=30

# Configurações específicas do mercado brasileiro
MARKET_TIMEZONE=America/Sao_Paulo
MARKET_CURRENCY=BRL
DEFAULT_EXCHANGE=.SA
